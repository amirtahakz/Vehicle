@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link-custom" aria-current="page" href="#">سلام @User.Identity.GetUserName()</a>
    </li>
    <li class="nav-item">
        <a class="nav-link-custom" href="/Account/LogOut">خروج</a>
    </li>
}
else
{
    <li class="nav-item">
        @Html.ActionLink("ثبت نام", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link-custom" })
    </li>
    <li class="nav-item">
        @Html.ActionLink("ورود", "Login", "Account", null, htmlAttributes: new { id = "registerLink", @class = "nav-link-custom" })
    </li>
