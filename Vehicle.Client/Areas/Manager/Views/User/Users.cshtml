
@{
    ViewBag.Title = "Users";
}
<div class="mt-5 col-11" style="height:100%">
    <p class="h1">مدیریت کاربران</p>
    <table class="table table-striped table-hover" id="users-tbl-manager">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ایمیل</th>
                <th scope="col">شماره تلفن</th>
                <th scope="col">تغییرات</th>
            </tr>
        </thead>
        <tbody>
            @*data will apear*@
        </tbody>
    </table>
</div>
@*-----Modal-----*@
<div class="modal fade" id="updataUserModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">ویرایش نقش های کاربر</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-primary" id="user-roles-tbl-manager">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">اسم نقش</th>
                            <th scope="col">تغییرات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @*data will appear here*@
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-9">
                        <select class="form-select" aria-label="Default select example" id="roles-select-list">
                            @*data will appear here*@
                        </select>
                    </div>
                    <div class="col-3">
                        <button type="button" class="btn btn-primary" id="add-user-role-btn">افزودن</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
            </div>
        </div>
    </div>
</div>
