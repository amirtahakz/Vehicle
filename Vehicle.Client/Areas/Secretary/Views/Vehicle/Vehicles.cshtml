
@{
    ViewBag.Title = "AddVehicle";
}

<div class="mt-5 col-11" style="height:100%">
    <p class="h1">مدیریت وسایل نقلیه</p>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addVehicleModal">
        اضافه کردن وسیله
    </button>
    <!-- Button trigger modal -->
    <table class="table table-striped table-hover" id="vehicle-tbl-secretary">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">اسم وسیله نقلیه</th>
                <th scope="col">پلاک</th>
                <th scope="col">رنگ</th>
            </tr>
        </thead>
        <tbody>
            @*data will apear*@
        </tbody>
    </table>
</div>


<!-- Modal -->
<div class="modal fade" id="addVehicleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">اضافه کردن وسیله</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">اسم ماشین</label>
                        <input type="text" class="form-control" id="car-name">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">پلاک ماشین</label>
                        <input type="text" class="form-control" id="car-tag">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">رنگ ماشین</label>
                        <input type="text" class="form-control" id="car-color">
                    </div>
                    <button type="button" class="btn btn-primary" id="add-vehicle-btn">افزودن</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
